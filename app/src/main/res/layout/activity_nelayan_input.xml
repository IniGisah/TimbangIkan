<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NelayanInput">

    <TextView
        android:id="@+id/timbang_ikan"
        android:layout_width="143dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_marginStart="30dp"
        android:text="Pilih Nelayan"
        android:gravity="top"
        android:textSize="20sp"
        android:textColor="#053742"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/timbang_hasil"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:text="Silahkan pilih nelayan dibawah ini"
        android:gravity="top"
        android:textSize="15sp"
        android:textColor="#053742"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timbang_ikan"
        />

    <EditText
        android:id="@+id/searchfield"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_edit_text_rounded"
        android:drawableStart="@drawable/round_search_24"
        android:drawablePadding="12dp"
        android:hint="Cari Nelayan"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/timbang_hasil"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/nelayanlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/searchfield"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>